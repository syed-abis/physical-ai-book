# Task API Backend Environment Configuration
# Copy this file to .env and fill in the values

# Database Configuration (Neon Serverless PostgreSQL)
DATABASE_URL='postgresql://neondb_owner'

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# JWT Authentication
# IMPORTANT: Generate a strong secret for production (e.g., openssl rand -hex 32)
JWT_SECRET='your-super-secret-jwt-key-change-in-production'
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=168  # 7 days
BCRYPT_ROUNDS=12

# Debug Mode (true/false)
DEBUG=false

# Logging Level (debug, info, warning, error, critical)
LOG_LEVEL=info

# OpenAI Chat Configuration
# IMPORTANT: Add your OpenAI API key for chat functionality
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
CHAT_MAX_TOKENS=2000
CHAT_TIMEOUT_SECONDS=30

# MCP Server Configuration
MCP_BASE_URL=http://localhost:8001

# Chat API Rate Limiting
# Maximum requests per minute per authenticated user (0 to disable)
CHAT_RATE_LIMIT=10
